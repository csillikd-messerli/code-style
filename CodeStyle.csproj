<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Messerli.CodeStyle</AssemblyName>
        <Version>1.0.0</Version>
    </PropertyGroup>
    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="IDisposableAnalyzers" Version="2.1.2" PrivateAssets="none" />
        <PackageReference Include="StyleCop.Analyzers" Version="1.1.118" PrivateAssets="none" />
    </ItemGroup>
    <ItemGroup>
        <None Include="Config\**\*">
            <Pack>true</Pack>
            <PackagePath>build\$(TargetFramework)\Config</PackagePath>
        </None>
        <None Include="$(AssemblyName).targets">
            <Pack>true</Pack>
            <PackagePath>build\$(TargetFramework)</PackagePath>
        </None>
    </ItemGroup>
</Project>
